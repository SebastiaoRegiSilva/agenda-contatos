@using Agenda.Contatos.Enums
@model UsuarioModel

@{ 
	ViewData["Title"] = "Edição de usuários";
}

<!--Botão de voltar para tela anterior.-->
<button onclick="history.back()" title="Clique para voltar(Alt + Seta para a esquerda)">Voltar</button>

<form asp-controller="Usuario" asp-action="EditarUsuario" method="post">
	<!--Asp action -->
	<div class="text-center">
		<h1 class="display-4">Editar usuário</h1>
	</div>

	<div class="form-group">
		<label for="nome">Nome</label>
		<input type="text" asp-for="Nome" class="form-control" placeholder="Digite o nome do contato">
		@Html.ValidationMessageFor(u => u.Nome)
	</div>

	<div class="form-group">
		<label for="login">Login</label>
		<input type="text" asp-for="Login" class="form-control" placeholder="Digite o seu login">
		@Html.ValidationMessageFor(u => u.Login)
	</div>

	<div class="form-group">
		<label for="email">Endereço de e-mail</label>
		<input type="email" asp-for="Email" class="form-control" placeholder="Digite o endereço de e-mail">
		@Html.ValidationMessageFor(u => u.Email)
	</div>

	<div class="form-group">
		<label for="permissao">Permissão</label> <br />
		<select asp-for="NivelPermissao" aria-label="Default select example">
			<option value="0">Selecione o tipo de permissão do usuário</option>
			<option value="@Permissao.Admin">Administrador</option>
			<option value="@Permissao.Padrao">Padrão</option>
		</select>
		@Html.ValidationMessageFor(u => u.NivelPermissao)
	</div>

	<br />
	<br />

	<!--Botão para enviar todo o formulário-->
	<button type="submit" class="btn btn-primary">Alterar</button>
	<!--Voltar a página inicial-->
	<a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Página Inicial</a>
</form>